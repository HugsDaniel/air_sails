
<div class="banner" style="background: linear-gradient(-200deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "background.jpg" %>');">
  <div class="banner-content">
    <h1>Bienvenue sur AirSails</h1>
    <p>Un voyage unique en voilier</p>

    <%= form_tag trips_path, method: :get do %>
      <%= text_field_tag 'city_departure',nil,  placeholder: "City departure" %>
      <%= text_field_tag 'Users', nil, placeholder: 'User(s)' %>
      <%= text_field_tag 'date_departure', nil, placeholder: "Date", class: "datepicker" %>
      <%= submit_tag("Search") %>
    <% end %>
  </div>
</div>

