      <p class="text-center">First Name : <%= current_user.first_name %></p>
      <% end %>
    </div>
    <div class="col-md-4">
      <h3 class="text-center">Trips</h3>
      <% @bookings.each do |booking| %>
      <p class="text-center">Departure date : <strong><%= booking.trip.departure_date %></strong></p>
      <p class="text-center">Departure port : <%= booking.trip.departure_port %></p>
      <p class="text-center">Arrival port : <%= booking.trip.arrival_port %></p>
      <% end %>
    </div>
